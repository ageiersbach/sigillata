<p id="notice"><%= notice %></p>

<h1>Glaze Materials</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @glaze_materials.each do |glaze_material| %>
      <tr>
        <td><%= glaze_material.name %></td>
        <td><%= link_to 'Show', glaze_material %></td>
        <td><%= link_to 'Edit', edit_glaze_material_path(glaze_material) %></td>
        <td><%= link_to 'Destroy', glaze_material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

