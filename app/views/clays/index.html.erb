<p id="notice"><%= notice %></p>

<h1>Clays</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clays.each do |clay| %>
      <tr>
        <td><%= clay.name %></td>
        <td><%= clay.cone %></td>
        <td><%= link_to 'Show', clay %></td>
        <td><%= link_to 'Edit', edit_clay_path(clay) %></td>
        <td><%= link_to 'Destroy', clay, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Clay', new_clay_path %>
